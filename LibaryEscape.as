package{		//greensock imports	import com.greensock.events.LoaderEvent;	import com.greensock.loading.ImageLoader;	import com.greensock.loading.LoaderMax;	import com.greensock.loading.SWFLoader;	import com.greensock.loading.XMLLoader;	import com.greensock.loading.core.LoaderItem;		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;
		public class LibaryEscape extends MovieClip	{		private var xmlcue:LoaderMax;		private var scene:Scene;		private var ui:UserInterface;		private var huidigeScene:Number;		private var volgendeScene:Number;		private var splashscreen:Boolean;				public function LibaryEscape()		{			//setting screen to fullscreen size			var fs:Screensize = new Screensize(0,0,20,20);			addChild(fs);			fs.fullscreenauto();						//loading Xml doc 			xmlcue = new LoaderMax({name:"mainque",onProgress:progressHandler, onComplete:completeHandler, onError:errorHandler});			xmlcue.append(new SWFLoader("Start.swf",{name:"start"}));			xmlcue.append(new XMLLoader("xml/test.xml",{name:"xml"}));			xmlcue.load(true);		}						private function progressHandler(event:LoaderEvent):void {			trace("progress: " + event.target.progress);		}				private function errorHandler(event:LoaderEvent):void {			trace("error occured with " + event.target + ": " + event.text);		}					private function completeHandler(event:LoaderEvent) {			var xml = LoaderMax.getContent("xml");			var startScreen = LoaderMax.getContent("start");						//adding splash screen			//addChild(startScreen);			//start first gamescreen			buildscreen(xml,1);		}				private function buildscreen(xml:XML,sceneNumber:Number) {			//building scene			scene = new Scene(xml,sceneNumber);			//building UI			ui = new UserInterface(xml,sceneNumber);			//setting up navigation					}	}}